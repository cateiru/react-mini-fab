{
  "name": "react-mini-fab",
  "description": "A lightweight and customizable Mini Floating Action Button (Mini FAB) component for React applications. This component provides an easy way to add a floating action button to your UI, enhancing user interaction and accessibility.",
  "version": "1.0.5",
  "type": "module",
  "keywords": [
    "react",
    "fab",
    "floating action button",
    "mini button"
  ],
  "author": {
    "name": "cateiru",
    "email": "git@cateiru.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cateiru/react-mini-fab.git"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./style.css": "./dist/index.css"
  },
  "scripts": {
    "dev": "vite",
    "dev:storybook": "storybook dev -p 6006",
    "build": "vite build",
    "build:storybook": "storybook build",
    "lint": "biome lint .",
    "lint:write": "biome lint --write .",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "@biomejs/biome": "^2.2.6",
    "@storybook/addon-docs": "^9.1.13",
    "@storybook/addon-essentials": "9.0.0-alpha.12",
    "@storybook/addon-links": "9.1.13",
    "@storybook/react": "^9.1.13",
    "@storybook/react-vite": "9.1.13",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "postcss-nested": "^7.0.2",
    "storybook": "9.1.13",
    "typescript": "~5.9.2",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
